<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx" maxWidth="600" minWidth="300"
      xmlns:fx="http://javafx.com/fxml" prefHeight="300.0" prefWidth="350.0">

    <HBox alignment="TOP_RIGHT">
        <Hyperlink text="%main.settings" id="settings-link" onMouseClicked="#onSettingsClicked" />
    </HBox>
    <VBox>

        <Label alignment="CENTER" text="%login.enter">
            <VBox.margin>
                <Insets bottom="20" top="20" left="100"/>
            </VBox.margin>
            <font>
                <Font size="30"/>
            </font>
        </Label>


        <TextField alignment="CENTER" promptText="%login.login" id="email-input">
            <VBox.margin>
                <Insets bottom="20" left="40" right="40"/>
            </VBox.margin>
        </TextField>
        <PasswordField alignment="CENTER" promptText="%login.password" id="password-input">
            <VBox.margin>
                <Insets bottom="20" left="40" right="40"/>
            </VBox.margin>
        </PasswordField>
        <HBox alignment="CENTER" spacing="10">
            <VBox.margin>
                <Insets bottom="20"/>
            </VBox.margin>
            <Button defaultButton="true" id="login-button" text="%login.login.button" onAction="#onLoginClick"/>
            <Button text="%login.register.button" onAction="#onRegisterClick"/>

        </HBox>
    </VBox>
</VBox>
